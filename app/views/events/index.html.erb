<% provide(:title, "Events") %>

<% if logged_in? %>
	<%= render 'jumbotron' %>
<% end %>

<div class="row">
	<div class="col-md-12">
		<h2>Upcoming Events</h2>
		<% if @events.upcoming.any? %>
			<ul class="media-list">
				<%= render @events.upcoming %>
			</ul>
			<%= will_paginate @events.upcoming %>
		<% else %>
			<h3>Events (0)</h3>
			<%= link_to new_event_path, class: 'btn btn-success' do %>
				Add Event <i class="fa fa-plus-circle"></i>
			<% end %>
		<% end %>
	</div>
	<div class="col-md-12">
		<h2>Past Events</h2>
		<% if @events.past.any? %>
			<ul class="media-list">
				<%= render @events.past %>
			</ul>
			<%= will_paginate @events.past %>
		<% end %>
	</div>
</div>