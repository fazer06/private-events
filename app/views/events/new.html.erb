<% provide(:title, "Add Event") %>
<div class="row">
	<div class="col-md-8 col-md-offset-2">
		<h1>New Event</h1>
		<div class="panel panel-primary">
			<div class="panel-heading">
				Event Details
			</div>
			<div class="panel-body">
			<%= form_for(@event) do |f| %>

				<%= render 'fields', f: f %>

				<%= link_to events_path, class: "btn btn-primary" do %>
					Back <i class="fa fa-chevron-left"></i>
				<% end %>

				<%= button_tag( class: "btn btn-success") do %>
					Add Event <i class="fa fa-check"></i>
				<% end %>

			<% end %>
			</div>
		</div>
	</div>
</div>